from flask import Flask, render_template, url_for

app = Flask(__name__)

@app.route('/')
def index():
    return render_template('login.html')

@app.route('/register')
def about():  
    return render_template('registration.html')
    
if __name__ == "__main__":
    app.run(debug=True)
    
    
    
